function invierteserie($x,$y)
{
  
    $contador=0;
    $z=4;
     if(($x>255 ||  $x<0  ) || ($y>255 || $y<0))
     {
        return -1;
     }
    else
    {  
    do{
       $valor=$x.$y;
       $invertido=$y.$x;
       $x=$x+1;
       $y=$y+1; 
       $contador=$contador+1;
    }while($contador!=$z);
      
    }
   
 return$valor .$invertido; 
 
}

echo invierteserie(10,12);

/*EJERCICIO 15

 * 
 *  */
function EjerQuince(array $numeros){
    $nelementos=  count($numeros);
    $suma=0;
    $result=$numeros[1];
    
        for($i=0;$i<$nelementos; $i++){
                //echo $numeros[$i];
                $suma+=$numeros[$i];
                //
                //echo $suma;
               
                if($numeros[$i]>$suma)
                    $result=$numeros[$i];
                else {
                    if($suma>$result)
                    $result=$suma;
                    
                }
                              
    }
    echo $result;
}

EjerQuince( [4, -3, 7, 2, 4, -5, 1, 2] );
echo "<hr>\n";

/*EJERCICIO 16

 * 
 *  */
function EjerDieciSeis($x,$y,$z){

$resultado = -1;
$multiplicador = 2;
if ($y > $z)
{
    $resultado = 0;
    if ($x > 255 || $y > 255 || $z > 255 || $x <= 0 || $y <= 0 || $z <= 0)
    {
        $resultado = -1;
    }
}
else
{
    if ($x > 255 || $y > 255 || $z > 255 || $x <= 0 || $y <= 0 || $z <= 0)
    {
        $resultado = -1;
    }
    else
    {
        for ($i = 1; $i <= $z; $i++)
        {
            if ($i == $y)
            {
                $resultado = $x;
            }
            else
            {
                $x = $x * $multiplicador;
                $multiplicador = $multiplicador + 2;
                $resultado = $resultado + $x;
            }
        }
    }
}
echo $resultado;
}
EjerDieciSeis(3,1,3);
echo "<hr>\n";

